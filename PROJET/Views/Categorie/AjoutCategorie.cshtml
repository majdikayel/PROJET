@model PROJET.Models.CAT_CATEGORIE

@{
    ViewBag.Title = "AjoutCategorie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AjoutCategorie</h2>
<div>
    <form id="formCategorie" name="formCategorie" action="" method="post">
        @if(Model != null)
            {
                <input type="hidden" name="CODDE_CATEGORIE" id="CODDE_CATEGORIE" value="@Model.CODDE_CATEGORIE"/>
            }
        <div class="form-group">
            <label>CATEGORIE</label>
            <input type="text" id="LIBELLE_CATEGORIE" name="LIBELLE_CATEGORIE" class="form-control" value="@(Model != null? Model.LIBELLE_CATEGORIE : "")" required />

        </div>
        <div>
            @if (Model == null)
            {
                <input type="submit" id="enregistrer" name="enregistrer" value="Enregistrer" class="btn btn-primary" />

            }
            else
            {
                <input type="submit" id="Modifier" name="Modifier" value="Enregistrer modification" class="btn btn-success" />
                <a href="~/Categorie/AjoutCategorie" class="btn btn-default">Annuler</a>
                }

        </div>
    </form>
    <hr />

    <div class="table-responsive">
        <table class="table table-bordered">
            <tr>
                <th>
                    CATEGORIE
                </th>

                <th>
                    DATE SAISIE
                </th>
                <th>
                    Btn-Modifier
                </th>
                <th>
                    Btn-Supprimer
                </th>
            </tr>

            @foreach(var data in ViewBag.listeCategorie)
            {
        <tr>
            <td>@data.LIBELLE_CATEGORIE</td>
            <td>@data.DATE_SAISIE</td>
            <td><a href="~/Categorie/ModifierCategorie/@data.CODDE_CATEGORIE" class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-edit"></span>Modifier</a></td>
            <td><a href="~/Categorie/SupprimerCategorie/@data.CODDE_CATEGORIE" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span>Supprimer</a></td>


        </tr>

            }
        </table>
    </div>
</div>

